# MQTT broker configuration
MQTT_BROKER=200.13.4.202
MQTT_PORT=1883
# If your broker requires auth, set these; otherwise leave empty
MQTT_USERNAME=
MQTT_PASSWORD=
# Optional: client id prefix
MQTT_CLIENT_ID=env-sensors-led
# Publish topic for LED
MQTT_LED_TOPIC=SAD/led
# Subscribe topics (comma-separated) â€” leave defaults unless broker differs
MQTT_TOPICS=SAD/sps30,SAD/dht22,SAD/mq7
# How long (seconds) a reading is considered fresh
FRESH_WINDOW_SEC=120
# Minimum seconds between identical LED publishes
MIN_PUBLISH_INTERVAL_SEC=60
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Heartbeat interval to publish LED color (seconds)
HEARTBEAT_INTERVAL_SEC=1
